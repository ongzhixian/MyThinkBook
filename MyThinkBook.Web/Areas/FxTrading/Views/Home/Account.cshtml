@using MyThinkBook.Web.Domain.OandaApi;
@model AccountSummaryResponse
<div class="ten columns">
    <div class="container">

        <h2>Account information</h2>

        <table class="u-full-width">
            <thead>
                <tr>
                    <th class="text-right">Balance</th>
                    <th class="text-right">Open trades</th>
                    <th class="text-right">Open positions</th>
                    <th class="text-right">Pending orders</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-right">@Model.AccountSummary.Balance.ToString("C")</td>
                    <td class="text-right">@Model.AccountSummary.OpenTradeCount</td>
                    <td class="text-right">@Model.AccountSummary.OpenPositionCount</td>
                    <td class="text-right">@Model.AccountSummary.PendingOrderCount</td>
                </tr>
            </tbody>
        </table>

    </div>
</div>