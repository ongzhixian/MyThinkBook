@using MyThinkBook.Web.Domain;
@model IPaginationData

<div class="row pagination">
    <div class="one-half column">
        @if (Model.CurrentPage != 1)
        {
            <a class="button nav" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="@ViewContext.RouteData.Values["action"]" asp-route-page="@(Model.CurrentPage - 1)">Previous @Model.PageSize</a>
        }
        else
        {
            <text>&nbsp;</text>
        }
    </div>
    <div class="one-half column" style="text-align:right;">
        @if (Model.CurrentPage != Model.TotalPageCount)
        {
            <a class="button nav" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="@ViewContext.RouteData.Values["action"]" asp-route-page="@(Model.CurrentPage + 1)">Next @(Math.Min(Model.TotalRecordCount - Model.RecordEnd, Model.PageSize))</a>
        }
        else
        {
            <text>&nbsp;</text>
        }
    </div>
</div>

