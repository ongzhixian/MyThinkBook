@using MyThinkBook.Web.Domain;

@model IEnumerable<Portfolio>
@{
    ViewData["Title"] = "Investment";
}

<div class="container">

    <div class="row">
        <div class="twelve columns">
            <h1 style="text-align:center;">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row">
        
        <div class="ten columns">
            <div class="container">

                <h2>Portfolios</h2>

                <table class="u-full-width">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Positions</th>
                            <th class="text-right""">Total investment</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Positions.Count</td>
                            <td class="text-right">@item.Positions.Sum(r=> r.Price * r.Quantity).ToString("C")</td>
                            
                        </tr>
                        }
                        <tr>
                            <td>Gamache</td>
                            <td>26</td>
                            <td>$239,202</td>
                            
                        </tr>
                        <tr>
                            <td>Johnson</td>
                            <td>42</td>
                            <td>$659,234</td>
                        </tr>
                    </tbody>
                </table>

            </div>

        </div>
        <div class="two columns">
            @await Html.PartialAsync("_SideNavBar")
        </div>
    </div>

</div>

@section Scripts {
    @*<script src="~/js/fxTrading.js"></script>*@
}